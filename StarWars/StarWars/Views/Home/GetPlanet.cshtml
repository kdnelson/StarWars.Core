@model StarWars.ViewModels.Planet.GetPlanetViewModel
<!DOCTYPE html>
<html>
<head>
    <title>Details for Planet Number 22</title>
</head>
<body>
    <h3>Details for Planet Number 22</h3>
    <div>
        <ul>
            <li>Planet Name: @Model.PlanetModel.Name</li>
            <li>Length of Day: @Model.PlanetModel.RotationalPeriod hours</li>
            <li>Length of Year: @Model.PlanetModel.OrbitalPeriod days</li>
            <li>Diameter: @Model.PlanetModel.Diameter km</li>
            <li>Climate: @Model.PlanetModel.Climate</li>
            <li>Gravity: @Model.PlanetModel.Gravity</li>
            <li>Surface Water: @Model.PlanetModel.SurfaceWater %</li>
            <li>Population: @Int64.Parse(Model.PlanetModel.Population).ToString("N0")</li>
        </ul>
    </div>
</body>
</html>