@model StarWars.ViewModels.Vehicle.SearchVehicleViewModel
<!DOCTYPE html>
<html>
<head>
    <title>Vehicle Summary</title>
</head>
<body>
    <div>
        <h3>Vehicle Summary</h3>
        <ul>
            <li>Total Number of Vehicles with Known Cost: @Model.VehicleWithValidCostInCreditsTotal</li>
            <li>Total Number of Manufacturers: @Model.UniqueManufacturerTotal</li>
        </ul>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Manufacturer Name</td>
                    <td>Vehicle Count</td>
                    <td>Average Cost</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.UniqueManufacturerList)
                {
                    <tr>
                        <td>@d.Name</td>
                        <td>@d.GroupListCount</td>
                        <td>@d.CostInCreditsPerGroupAverage.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>